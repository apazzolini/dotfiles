[user]
    name = Andre Azzolini
    email = andre@azzolini.io
[core]
    excludesfile = ~/.gitignore
    quotepath = false
    editor = nvim
    autocrlf = input
    commentchar = ";"
    pager = delta
[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    hunk-header-style = omit
    paging = never
    line-numbers = true
    line-numbers-minus-style = red
    line-numbers-zero-style = 246
    line-numbers-plus-style = green
    minus-style = red
    minus-non-emph-style = red
    minus-emph-style = red 52
    minus-empty-line-marker-style = omit
    plus-empty-line-marker-style = omit
    zero-style = normal
    plus-style = green
    plus-non-emph-style = green
    plus-emph-style = green 235
[push]
    default = current
[pull]
    rebase = true
[github]
    user = apazzolini
    email = andre@azzolini.io
[color]
    ui = true
[color "status"]
    changed = yellow
    added = green
    untracked = cyan
[alias]
    di = diff
    ds = diff --staged
    st = status
    ca = commit --amend
    can = commit --amend --no-edit
    aa = add --all
    co = checkout
    cot = checkout --track
    coi = checkout --ignore-other-worktrees
    br = branch
    s = stash
    hist = log --pretty=format:\"%h %ad [%an] | %s%d\" --graph --decorate --date=short
    cm = commit -m
    pr = pull --rebase
    pnv = push --no-verify
    pfwl = push --force-with-lease
    ri = rebase --interactive
    rod = "!git fetch && git reset --hard && git clean -fd && git checkout --ignore-other-worktrees develop && git pull"

    # Fancy logging.
    #   h = head
    #   hp = head with patch
    #   r = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    #   l = all commits, only current branch
    #   la = all commits, all reachable refs
    #   b = all branches
    #   bs = all branches, sorted by last commit date
    head = !git r -1
    h = !git head
    hp = "!. ~/.githelpers && show_git_head"
    r = !GIT_NO_PAGER=1 git l -30
    ra = !git r --all
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
    b = "!. ~/.githelpers && pretty_git_branch"
    bs = "!. ~/.githelpers && pretty_git_branch_sorted"
[diff]
    tool = vimdiff
[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red "#500000"
    newNormal = green
    newHighlight = green "#003000"
[color "diff"]
    meta = 11
    frag = magenta bold
    commit = yellow bold
    old = red
    new = green
    whitespace = "#ffff00" reverse
[include]
    path = ~/.gitconfig.local
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
