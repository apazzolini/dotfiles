{
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "javascriptreact", "typescript", "typescriptreact", "css"],
  "prettier.onlyUseLocalVersion": true,
  "prettier.disableSuccessMessage": true,
  "prettier.requireConfig": true,

  "signature.enable": false,

  "diagnostic.enableMessage": "jump",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.maxWindowWidth": 120,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": true,
  "diagnostic.errorSign": ">>",
  "diagnostic.infoSign": ">>",
  "diagnostic.hintSign": ">>",
  "diagnostic.warningSign": ">>",
  "diagnostic.messageTarget": "float",
  "diagnostic.messageDelay": 0,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.displayByAle": false,
  "diagnostic.format": "[%source%code] [%severity] %message",

  "suggest.minTriggerInputLength": 2,
  "suggest.triggerCompletionWait": 100,

  "javascript.updateImportsOnFileMove.enable": false,
  "javascript.validate.enable": false,
  "javascript.suggest.enabled": true,

  "typescript.validate.enable": true,
  "typescript.suggest.enabled": true
}
